{
  "name": "@nasa-gcn/architect-functions-search",
  "description": "Architect functions for OpenSearch",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "github:nasa-gcn/architect-functions-search"
  },
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Leo Singer",
      "email": "leo.p.singer@nasa.gov"
    }
  ],
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "prepare:husky": "husky",
    "prepare:tsc": "tsc",
    "prepare": "run-p prepare:*"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@architect/functions": ">=5.3.4",
    "@aws-sdk/credential-provider-node": "^3.188.0",
    "@opensearch-project/opensearch": "^2.2.1",
    "memoizee": "^0.4.15"
  },
  "devDependencies": {
    "@nasa-gcn/eslint-config-gitignore": "^0.0.2",
    "@tsconfig/node20": "^20.1.5",
    "@types/memoizee": "^0.4.8",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^10.1.2",
    "husky": "^9.1.0",
    "lint-staged": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "typescript": "^5.5.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "es2019": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "@nasa-gcn/eslint-config-gitignore",
      "prettier"
    ],
    "overrides": [
      {
        "files": "*.ts",
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ]
      }
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "lint-staged": {
    "*.(json|md|ts)": "prettier --write",
    "*.ts": "eslint"
  }
}
